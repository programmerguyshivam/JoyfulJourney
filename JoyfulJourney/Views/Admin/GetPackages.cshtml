@model IEnumerable<Journey.DTOs.GetAdminPackage>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetPackages</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .container {
            margin-top: 20px;
        }
        .table {
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .table thead {
            background: #343a40;
            color: #fff;
        }
        .table thead th {
            font-weight: bold;
        }
        .table tbody tr:nth-child(even) {
            background: #f2f2f2;
        }
        .table tbody tr:hover {
            background: #e9ecef;
        }
        .table td {
            vertical-align: middle;
        }
        .btn {
            margin: 0 5px;
        }
        .actions {
            display: flex;
            justify-content: space-around;
        }
        .actions a {
            text-decoration: none;
            color: #007bff;
            transition: color 0.3s;
        }
        .actions a:hover {
            color: #0056b3;
        }
        .header {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <p>
                <a href="@Url.Action("AdminCRUD")" class="btn btn-primary">Back</a>
            </p>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PackageId)</th>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Duration)</th>
                    <th>@Html.DisplayNameFor(model => model.ImageURL)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PackageId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                        <td><img src="@item.ImageURL" alt="Image" style="width: 100px; height: auto; border-radius: 4px;"></td>
                        <td class="actions">
                            @Html.ActionLink("Edit", "Edit", new { id = item.PackageId }, new { @class = "btn btn-warning btn-sm" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.PackageId }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.PackageId }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
