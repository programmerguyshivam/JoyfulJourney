@model Journey.DTOs.AddAdminDestinationDTO
@{
    Layout = null;
}

<style>
    body {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #f0f2f5;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 15px;
        border: 1px solid #ddd;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    .form-control.rounded {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        border: 1px solid #ccc;
        margin-bottom: 15px;
        width: 100%;
    }

    .btn-primary {
        background-color: #337ab7;
        border-color: #2e6da4;
        color: #fff;
        padding: 10px 20px;
        border-radius: 8px;
        width: 100%;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #286090;
        }

    .btn-secondary {
        background-color: #666;
        border-color: #444;
        color: #fff;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        margin-top: 15px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #555;
        }

    h4 {
        margin-bottom: 20px;
        font-size: 24px;
        color: #333;
    }

    hr {
        margin-bottom: 30px;
        border: none;
        height: 1px;
        background-color: #ddd;
    }
</style>

<div class="container">
    <h4 class="text-center">Destination Details</h4>
    <hr />
    <form asp-action="AddDestination">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control rounded" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control rounded" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country" class="control-label"></label>
            <input asp-for="Country" class="form-control rounded" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    <div class="text-center">
        <a asp-action="GetData" asp-controller="Admin" class="btn btn-secondary ms-2">Back to List</a>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
