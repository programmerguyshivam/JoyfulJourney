    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('discover-now').addEventListener('click', function (e) {
                e.preventDefault(); // Prevent the default action of the link
                document.getElementById('popular-destination').scrollIntoView({ behavior: 'smooth' });
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#discover-now').click(function (e) {
                e.preventDefault(); // Prevent the default action of the link
                $('html, body').animate({
                    scrollTop: $('#popular-destination').offset().top
                }, 800); // Duration of the scroll animation in milliseconds
            });
        });
    </script>
