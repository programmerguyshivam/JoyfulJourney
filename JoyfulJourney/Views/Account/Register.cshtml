@model Journey.DTOs.RegisterDTO

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <style>
        .register-container {
            max-width: 400px;
            margin: 40px auto;
            padding: 20px;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .register-title {
            text-align: center;
            margin-bottom: 20px;
        }

        .label-style {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .input-style {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 100%;
        }

            .input-style:focus {
                border-color: #aaa;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            }

        .submit-button {
            background-color: #4CAF50;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .submit-button:hover {
                background-color: #3e8e41;
            }

        .back-link {
            text-align: center;
            margin-top: 20px;
            color: #337ab7;
            text-decoration: none;
        }

            .back-link:hover {
                color: #23527c;
            }
    </style>
</head>
<body>

    <h4 class="register-title">RegisterDTO</h4>
    <hr />
    <div class="register-container">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Register" class="register-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label label-style"></label>
                        <input asp-for="FirstName" class="form-control input-style" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label label-style"></label>
                        <input asp-for="LastName" class="form-control input-style" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label label-style"></label>
                        <input asp-for="Email" class="form-control input-style" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label label-style"></label>
                        <input asp-for="Password" class="form-control input-style" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label label-style"></label>
                        <input asp-for="PhoneNumber" class="form-control input-style" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label label-style"></label>
                        <input asp-for="Address" class="form-control input-style" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary submit-button" />
                    </div>
                    <div>
                        <a asp-action="Login" asp-controller="Account" class="back-link">Already Have Account ? Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>



    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>